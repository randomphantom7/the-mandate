    <div class="background">
        <header class="applyHeading">
            <h1 class="applyPage">Application For Council</h1>
        </header>
        <form>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputName"><b>Name</b></label>
                    <input type="name" class="form-control tag" id="inputName" placeholder="Name" style="pointer-events: none;">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputRegno"><b>Registration No</b></label>
                    <input type="registration no" class="form-control tag" id="inputRegno" placeholder="Registration No" style="pointer-events: none;">
                </div>
            </div>
            <div class="form-group">
                <label for="inputSchool"><b>School</b></label>
                <input type="text" class="form-control tag" id="inputSchool" placeholder="Ex. Engineering, Law etc." style="pointer-events: none;">
            </div>
            <div class="form-group">
                <label for="inputBranch"><b>Branch</b></label>
                <input type="text" class="form-control tag" id="inputBranch" placeholder="Apartment, studio, or floor" style="pointer-events: none;">
            </div>
            <div class="form-group">
                <label for="inputSection"><b>Section</b></label>
                <input type="text" class="form-control tag" id="inputSection" placeholder="Ex. A,B,C etc" style="pointer-events: none;">
            </div>
            <div class="form-group">
                <label for="inputCgpa"><b>CGPA</b></label>
                <input type="text" class="form-control tag" id="inputCgpa" style="pointer-events: none;">
            </div>
            <div class="form-group">
                <label for="inputGpa"><b>GPA</b></label>
                <input type="text" class="form-control tag" id="inputGpa" style="pointer-events: none;">
            </div>
            <div class="form-group">
                <label for="inputPost"><b>Post</b></label>
                <select class="form-control tag" id="post">
                    <option selected>Choose Option</option>
                    <option>President</option>
                    <option>Cultural Secretory</option>
                    <option>General Secretory</option>
                    <option>Treasurer</option>
                    <option>Sports Secretory</option>
                    <option>Technical Secretory</option>

                </select>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputAttendence"><b>Attendence</b></label>
                    <input type="text" class="form-control tag" id="inputAttendence" style="pointer-events: none;">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputMail"><b>Mail</b></label>
                    <input type="text" class="form-control tag" id="inputMail" style="pointer-events: none;">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputContactNo"><b>Contact No</b></label>
                    <input type="text" class="form-control tag" id="inputContactNo" style="pointer-events: none;">
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        <b>Confirm Details</b>
                    </label>
                </div>
            </div>
            <div class="container">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" id="submit"> 
                    Submit
                </button>
                <button type="button" class="btn btn-primary " id="back">Back</button>

            </div>
        </form>

        <div class="footer">
            <p>&copy;2019 Manipal University, jaipur.manipal.edu, Dehmi Kalan, Near GVK Toll Plaza, Jaipur-Ajmer Expressway, Jaipur, Rajasthan 303007.</p>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="../static/bootstrap-4.3.1-dist/bootstrap-4.3.1-dist/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
           window.onload = fill;
      function fill(){
            axios.post('filldatacouncil', {
                regno : localStorage.getItem('userid').toString()
            })
            .then(function (response) {
                document.getElementById("inputName").value = response.data.name;
                document.getElementById("inputRegno").value = response.data.regno;
                document.getElementById("inputSchool").value = response.data.school;
                document.getElementById("inputSection").value = response.data.section;
                document.getElementById("inputBranch").value = response.data.branch;
                document.getElementById("inputCgpa").value = response.data.cgpa;
                document.getElementById("inputGpa").value = response.data.gpa;
                document.getElementById("inputAttendence").value = response.data.attendence;
                document.getElementById("inputMail").value = response.data.mail;
                document.getElementById("inputContactNo").value = response.data.contact;
            })
            .catch(function (error) {
                console.log(error);
            });
        }

        $(document).ready(function(){
          $("#submit").click(function(){
             var na = document.getElementById("inputName").value;
             var re = document.getElementById("inputRegno").value;
             var sc = document.getElementById("inputSchool").value;
             var br = document.getElementById("inputBranch").value;
             var se= document.getElementById("inputSection").value;
             var cg = document.getElementById("inputCgpa").value;
             var gp= document.getElementById("inputGpa").value;
             var po = document.getElementById("post").value;
             var at = document.getElementById("inputAttendence").value;
             var ma= document.getElementById("inputMail").value;
             var co = document.getElementById("inputContactNo").value;
           axios.post('/savedetailcouncil',{
               name : na,
               regno : re,
               school :sc,
               branch : br,
               section : se,
               cgpa : cg,
               post : po,
               gpa :gp,
               attendence : at,
               mail : ma,
               contact : co
           })
            .then(function (response) {
                if(response.data.applied==="true")
                {
                    alert("You Have already applied");
                }
                else
                {
                    alert("Successfully submitted");
                    window.location.href = "student_home";
                }
               
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });


        $(document).ready(function(){
          $("#back").click(function(){
            axios.get('/applycr')
            .then(function (response) {
               window.location.href = "applycr";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });

        $(document).ready(function(){
          $("#home").click(function(){
           axios.get('/student_home')
            .then(function (response) {
                window.location.href = "student_home";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });


        $(document).ready(function(){
          $("#homepage").click(function(){
           axios.get('/student_home')
            .then(function (response) {
                window.location.href = "student_home";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });
       

        
        $(document).ready(function(){
          $("#logout").click(function(){
           axios.get('/')
            .then(function (response) {
                window.location.href = "/";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });

    
    </script>
