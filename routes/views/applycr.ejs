    <div class="background">
        <header class="applyHeading">
            <h1 class="applyPage">Application For Class Representative</h1>
        </header>
        <form id="crform">
            <div class="form-row">
                <div class="form-group col-md-6 ">
                    <label for="inputName"><b>Name</b></label>
                    <input type="text" class="form-control tag" id="inputName" name="name" style="pointer-events: none;">
                </div>
                <div class="form-group col-md-6 ">
                    <label for="inputRegno"><b>Registration Number</b></label>
                    <input type="text" class="form-control tag" id="inputRegno" name="regno" style="pointer-events: none;">
                </div>
            </div>
            <div class="form-group">
                <label for="inputSchool"><b>School</b></label>
                <input type="text" class="form-control tag" id="inputSchool" name="school" placeholder="Ex. Engineering, BJMC, Architecture etc.">
            </div>
            <div class="form-group">
                <label for="inpuBranch"><b>Branch</b></label>
                <input type="text" class="form-control tag" id="inputBranch" name="branch" placeholder="Ex. Information Technology, Civil etc." style="pointer-events: none;">
            </div>
            <div class="form-group">
                <label for="inputSection"><b>Section</b></label>
                <input type="text" class="form-control tag" id="inputSection" name="section" placeholder="Ex. A,B,C etc" style="pointer-events: none;">
            </div>
            <div class="form-group">
                <label for="inputCgpa"><b>CGPA</b></label>
                <input type="text" class="form-control tag" id="inputCgpa" name="cgpa" placeholder="CGPA">
            </div>
            <div class="form-group">
                <label for="inputGpa"><b>GPA</b></label>
                <input type="text" class="form-control tag" id="inputGpa" name="gpa" placeholder="GPA">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputAttendence"><b>Attendence</b></label>
                    <input type="text" class="form-control tag" id="inputAttendence" name="attendence">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputMail"><b>Mail</b></label>
                    <input type="text" class="form-control tag" id="inputMail" name="mail" placeholder="abc" style="pointer-events: none;">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputContactNo"><b>Contact No </b></label>
                    <input type="text" class="form-control tag" id="inputContactNo" name="contact" placeholder="abc" style="pointer-events: none;">
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        <b>Confirm Details</b>
                    </label>
                </div>
            </div>
            <div class="container">
                <button type="button" class="btn btn-primary " id="applycouncil">Apply for Council</button>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" id="submit">
                    Submit
                </button>
                <button type="button" class="btn btn-primary " id="back">Back</button>
            </div>
        </form>

