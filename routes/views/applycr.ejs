    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
      window.onload = fill;
      function fill(){
            axios.post('filldata', {
                regno : localStorage.getItem('userid').toString()
            })
            .then(function (response) {
                console.log(response);
                document.getElementById("inputName").value = response.data.name;
                document.getElementById("inputRegno").value = response.data.regno;
                document.getElementById("inputSection").value = response.data.section;
                document.getElementById("inputBranch").value = response.data.department;
                document.getElementById("inputMail").value = response.data.email;
                document.getElementById("inputContactNo").value = response.data.contact;
            })
            .catch(function (error) {
                console.log(error);
            });
        }
        
            $(document).ready(function(){
          $("#submit").click(function(){
             var na = document.getElementById("inputName").value;
             var re = document.getElementById("inputRegno").value;
             var sc = document.getElementById("inputSchool").value;
             var br = document.getElementById("inputBranch").value;
             var se= document.getElementById("inputSection").value;
             var cg = document.getElementById("inputCgpa").value;
             var gp= document.getElementById("inputGpa").value;
             var at = document.getElementById("inputAttendence").value;
             var ma= document.getElementById("inputMail").value;
             var co = document.getElementById("inputContactNo").value;
           axios.post('/savedetail',{
               name : na,
               regno : re,
               school :sc,
               branch : br,
               section : se,
               cgpa : cg,
               gpa :gp,
               attendence : at,
               mail : ma,
               contact : co,
               votes :0
           })
            .then(function (response) {
                if(response.data.applied==="true")
                {
                    alert("You Have already applied");
                }
                else
                {
                    alert("Successfully submitted");
                    window.location.href = "student_home";
                }
               
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });

        $(document).ready(function(){
          $("#back").click(function(){
            axios.get('/student_home')
            .then(function (response) {
               window.location.href = "student_home";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });

        $(document).ready(function(){
          $("#applycouncil").click(function(){
            var re = document.getElementById("inputRegno").value;
            axios.post('/check_for_cr',{
                regno : re
            })
            .then(function(response){
                if(response.data.applied==="true")
                {
                    window.location.href = "apply_council";
                }
                else
                {
                    alert("You Have to First apply and get verified for CR");
                }
               
            })
            .catch(function (error){
                 console.log(error);
            });
        });
    });


    $(document).ready(function(){
          $("#home").click(function(){
           axios.get('/student_home')
            .then(function (response) {
