    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        $(document).ready(function(){
          $("#apply_cr").click(function(){
           axios.get('/applycr')
            .then(function (response) {
                window.location.href = "applycr";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });

        $(document).ready(function(){
          $("#result").click(function(){
           axios.post('/result')
            .then(function (response) {
                window.location.href = "result";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });



        $(document).ready(function(){
          $("#home").click(function(){
           axios.get('/student_home')
            .then(function (response) {
                window.location.href = "student_home";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });


        $(document).ready(function(){
          $("#homepage").click(function(){
           axios.get('/student_home')
            .then(function (response) {
                window.location.href = "student_home";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });
       

        
        $(document).ready(function(){
          $("#logout").click(function(){
           axios.get('/')
            .then(function (response) {
                window.location.href = "/";
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });





        $(document).ready(function(){
            console.log("hii");
          $("#vote_for_cr").click(function(){
           axios.post('/vote',{
            regno : localStorage.getItem('userid').toString()
           })
            .then(function (response) {
                if(response.data.canvote==="true")
                {
                    window.location.href = "vote";
                }
                else
                {
                    alert("You have already voted");
                }
            })
            .catch(function (error) {
                console.log(error);
            });
          });
        });


      </script>
